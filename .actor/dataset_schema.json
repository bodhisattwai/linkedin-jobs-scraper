{
  "title": "LinkedIn Jobs Dataset",
  "type": "object",
  "schemaVersion": 1,
  "properties": {
    "url": {
      "title": "Job URL",
      "type": "string",
      "description": "Direct URL to the job posting"
    },
    "title": {
      "title": "Job Title",
      "type": "string",
      "description": "Title of the job position"
    },
    "company": {
      "title": "Company Name",
      "type": "string",
      "description": "Name of the hiring company"
    },
    "location": {
      "title": "Job Location",
      "type": "string",
      "description": "Geographic location of the job"
    },
    "locationType": {
      "type": "string",
      "description": "Type of work location (On-site, Remote, Hybrid)"
    },
    "employmentType": {
      "type": "string",
      "description": "Employment type (Full-time, Part-time, Contract, etc.)"
    },
    "seniority": {
      "type": "string",
      "description": "Seniority level required (Entry-level, Mid-level, Senior, Executive)"
    },
    "salary": {
      "title": "Salary Information",
      "type": "string",
      "description": "Salary range or compensation details"
    },
    "description": {
      "title": "Job Description",
      "type": "string",
      "description": "Full job description and requirements"
    },
    "jobCriteria": {
      "type": "array",
      "description": "List of job criteria/requirements extracted from the listing",
      "items": {
        "type": "string"
      }
    },
    "postedDate": {
      "title": "Posted Date",
      "type": "string",
      "description": "When the job was posted"
    },
    "hiringTeam": {
      "type": "array",
      "description": "List of hiring team members/recruiters with their details",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Name of the recruiter or hiring manager"
          },
          "title": {
            "type": "string",
            "description": "Job title/position of the recruiter"
          },
          "profileUrl": {
            "type": "string",
            "description": "LinkedIn profile URL of the recruiter"
          }
        }
      }
    },
    "searchQuery": {
      "title": "Search Query",
      "type": "string",
      "description": "Search query used to find this job"
    },
    "location_filter": {
      "type": "string",
      "description": "The location filter used in the search"
    },
    "scrapedAt": {
      "title": "Scraped At",
      "type": "string",
      "format": "date-time",
      "description": "Timestamp when the job was scraped"
    },
    "customData": {
      "title": "Custom Data",
      "type": "object",
      "description": "Additional custom data"
    }
  }
}